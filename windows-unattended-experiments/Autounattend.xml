            <Order>7</Order>
            <CommandLine>powershell.exe -File %SystemDrive%\WinDir\Setup\Scripts\setup_ssh.ps1</CommandLine>
            <Description>Enable ssh server</Description>
            <RequiresUserInput>false</RequiresUserInput>
